<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="16dp">
    
    <ImageView
        android:id="@+id/future_weather_list_item_image_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@mipmap/ic_launcher"/>
    <android.support.constraint.ConstraintLayout
        android:id="@+id/future_weather_list_item_details_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@id/future_weather_list_item_image_image_view"
        app:layout_constraintBottom_toBottomOf="@id/future_weather_list_item_image_image_view"
        app:layout_constraintLeft_toRightOf="@id/future_weather_list_item_image_image_view"
        app:layout_constraintRight_toRightOf="parent">
        <TextView
            android:id="@+id/future_weather_list_item_temperature_text_view"
            style="@style/futureWeatherItemDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/future_weather_list_item_main_text_view"
            android:hint="@string/weather_temperature_hint"/>
        <TextView
            android:id="@+id/future_weather_list_item_main_text_view"
            style="@style/futureWeatherItemDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/future_weather_list_item_temperature_text_view"
            app:layout_constraintRight_toLeftOf="@id/future_weather_list_item_humidity_text_view"
            android:hint="@string/weather_main_hint"/>
        <TextView
            android:id="@+id/future_weather_list_item_humidity_text_view"
            style="@style/futureWeatherItemDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/future_weather_list_item_main_text_view"
            app:layout_constraintRight_toRightOf="parent"
            android:hint="@string/weather_humidity_hint"/>
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>